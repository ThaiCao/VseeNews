<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="com.vsee.news.presentation.features.news.listener.FeedItemClickListener" />
        <variable
            name="articleItem"
            type="com.vsee.news.domain.features.news.model.ArticleItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_default"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFeed"
            android:layout_width="@dimen/width_feed_item"
            android:layout_height="@dimen/width_feed_item"
            android:scaleType="fitXY"
            app:imageUrl="@{articleItem.urlToImage}"
            app:placeholder="@{@drawable/ic_place_holder}"
            app:layout_constraintDimensionRatio="160:160"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            app:layout_constraintStart_toEndOf="@+id/ivFeed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivFeed"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:text="@{articleItem.title}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_news_title_size"
            android:fontFamily="@font/proximanova_semibold"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:text="@{articleItem.description}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_news_description_size"
            android:fontFamily="@font/proximanova_regular"
            app:layout_constraintStart_toEndOf="@+id/ivFeed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            app:layout_constraintStart_toEndOf="@+id/ivFeed"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/ivFeed"
            android:lines="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_news_time_size"
            android:fontFamily="@font/proximanova_light"
            app:newTime="@{articleItem.publishedAt}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>